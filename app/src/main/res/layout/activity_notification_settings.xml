<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Notification Types Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”” Notification Types"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Switch
                    android:id="@+id/switch_smart_recommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Smart Recommendations"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/switch_pattern_alerts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Pattern-Based Alerts"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/switch_location_aware"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Location-Aware Notifications"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/switch_travel_insights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Travel Insights"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/switch_favorite_updates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸ Favorite Place Updates"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/switch_smart_reminders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”” Smart Reminders"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/switch_weather_alerts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¤ï¸ Weather Alerts" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Timing Settings Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â° Timing Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Switch
                    android:id="@+id/switch_respect_quiet_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ™ Respect Quiet Hours"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quiet Hours Start:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TimePicker
                    android:id="@+id/time_picker_quiet_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:timePickerMode="spinner"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quiet Hours End:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TimePicker
                    android:id="@+id/time_picker_quiet_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:timePickerMode="spinner" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Frequency Settings Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Frequency Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Daily Notifications:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_max_daily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 notifications/day"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seek_bar_max_daily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="19"
                    android:progress="9"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Min Time Between Notifications:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_min_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 minutes"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seek_bar_min_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="19"
                    android:progress="1"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Priority Settings Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Priority Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minimum Priority Level:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_min_priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Low"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seek_bar_min_priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="4"
                    android:progress="1"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minimum Relevance Score:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_min_relevance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30.0%"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seek_bar_min_relevance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="30"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Location Settings Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Location Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Switch
                    android:id="@+id/switch_location_based_timing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Enable Location-Based Timing"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable location-based timing optimization"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—ºï¸ Real-time Location Tracking"
                    android:textColor="@color/purple_700"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/switchLocationTracking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable real-time place notifications"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get instant notifications about nearby restaurants, hotels, cafes, parks, malls, gas stations, and parking with ratings and locations"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location Radius:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_location_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.0 km"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seek_bar_location_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="49"
                    android:progress="9"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”„ Reset"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FF9800" />

            <Button
                android:id="@+id/button_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ… Save Settings"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4CAF50" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
